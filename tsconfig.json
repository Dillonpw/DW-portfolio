{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/theme-provider.jsx",
    "app/blog/page.jsx",
    "components/blogComponents/header.jsx",
    "components/scroll.jsx",
    "components/blogComponents/textBox.jsx",
    "app/blog/ticker/page.jsx",
    "lib/api.js"
, "lib/blogPosts.js"  ],
  "exclude": [
    "node_modules"
  ]
}
